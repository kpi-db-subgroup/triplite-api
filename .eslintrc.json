{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "strict": "off",
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "operator-linebreak": "off",
    "arrow-parens": "off",
    "implicit-arrow-linebreak": "off",
    "no-use-before-define": "off",
    "func-names": "off"
  }
}
